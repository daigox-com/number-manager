{
    "name": "daigox-com/number-manager",
    "description": "üõ†Ô∏è Powerful multilingual number utilities for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "daigox-com",
            "email": "daigox.official@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "Daigox\\NumberManager\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.11",
        "friendsofphp/php-cs-fixer": "^3.55"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs:fix": "php-cs-fixer fix --allow-risky=yes",
        "cs:check": "php-cs-fixer fix --allow-risky=yes --dry-run --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
